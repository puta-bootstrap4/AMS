<!DOCTYPE html>
<html>
  <head>
    <title>シフト管理システム</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <div class="header">
      <div class="container">
        <% if @current_user %>
          <p class="text-white pt-4"><%="ようこそ#{@current_user.username}さん"%></p>
        <%end%>
        <% if @current_user %>
          <%=link_to("/logout",{method: "post"}) do %><button type="button" class="btn btn-light float-right">ログアウト</button><% end %>
        <% end %>
      </div>
    </div>
    <% if flash[:notice] %>
      <div class="flash bg-primary">
        <div class="container">
          <%= flash[:notice] %>
        </div>
      </div>
    <% else %>
      <div class="mt-5">
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
